{
	"compilerOptions": {
		"outDir": "build",
		"target": "es6",
		"module": "commonjs",
		"moduleResolution": "node",
		"sourceMap": true,
		"typeRoots": ["node_modules/@types"],
		"lib": [ "es2015","DOM"],
		"suppressImplicitAnyIndexErrors" : true,
		"noImplicitAny" : true
	},
	"include": [
		"src/**/**.ts",
		"test/**/**.ts"
	],
	"exclude": [
		"node_modules"
	]
}
