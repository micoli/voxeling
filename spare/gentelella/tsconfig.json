{
	"compilerOptions": {
		"outDir": "build",
		"target": "ES2015",
		"module": "CommonJS",
		"moduleResolution": "node",
		"sourceMap": true,
		"typeRoots": [
		  "node_modules/@types"
		],
		"lib": [
		  "es2015",
		  "DOM"
		],
		"noImplicitAny": true,
		"alwaysStrict": true,
		"experimentalDecorators":true
	},
	"include": [
		"src/**/**.ts",
		"test/**/**.ts"
	],
	"exclude": [
		"node_modules",
		"src/spare"
	],
	"files": [
        "src/typings.d.ts"
    ]
}
